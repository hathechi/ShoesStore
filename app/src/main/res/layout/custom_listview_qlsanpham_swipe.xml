<?xml version="1.0" encoding="utf-8"?>
<com.chauthai.swipereveallayout.SwipeRevealLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/Swipe_Layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:dragEdge="right"
    app:mode="same_level"

    >


    <!-- Your secondary layout here -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"

        >


        <TextView
            android:id="@+id/btntvSua"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="EDIT"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"
            android:background="#003CD5"
           />


        <TextView
            android:id="@+id/btntvXoa"
            android:layout_width="100dp"
            android:textColor="@color/white"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="#BA0000"
            android:text="DELETE"
            android:textSize="20dp" />
    </LinearLayout>

    <!-- Your main layout here -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="10dp">


        <LinearLayout
            android:id="@+id/click_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#6BD6D6D6"
            android:orientation="horizontal"
            android:padding="10dp">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="15dp">

                <ImageView
                    android:id="@+id/iv_sanpham1_home"
                    android:layout_width="130dp"
                    android:layout_height="110dp"
                    app:srcCompat="@drawable/emone" />
            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:orientation="vertical">


                <!--            <TextView-->
                <!--                android:id="@+id/tv_id"-->
                <!--                android:layout_width="wrap_content"-->
                <!--                android:layout_height="match_parent"-->
                <!--                android:layout_weight="1"-->
                <!--                android:text="ID"-->
                <!--                android:textSize="16dp" />-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_sanpham1_home"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Tên Sản Phẩm"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_gia_home"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="Giá"
                        android:textColor="#FF0202"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_thuonghieu1_home"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="left"
                    android:text="Thương Hiệu"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_mota_home"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Mô Tả"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <!--                <Button-->
                    <!--                    android:id="@+id/btnChiTiet1"-->
                    <!--                    android:layout_width="20dp"-->
                    <!--                    android:layout_height="wrap_content"-->
                    <!--                    android:layout_weight="1"-->
                    <!--                    android:background="@drawable/radius_button"-->
                    <!--                    android:backgroundTint="@drawable/state_button"-->
                    <!--                    android:text="buy"-->
                    <!--                    android:textColor="@color/white"-->

                    <!--                    android:textStyle="bold" />-->
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</com.chauthai.swipereveallayout.SwipeRevealLayout>