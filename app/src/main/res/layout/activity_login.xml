<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/br3"
    android:orientation="vertical"
    android:paddingTop="20dp"
    android:id="@+id/main_content"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/textView9"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginBottom="40dp"
        android:background="@drawable/logo" />

    <!--    <TextView-->
    <!--        android:id="@+id/tvError_user"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:layout_marginLeft="50dp"-->
    <!--        android:layout_marginBottom="5dp"-->
    <!--        android:text="USER NAME"-->
    <!--        android:textColor="#FFFFFF" />-->

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_input_user"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:hint="User name"
        android:textColorHint="@color/white"
        app:hintTextAppearance="@style/TextInputLayoutHintText"
        app:startIconDrawable="@drawable/icon_user"
        app:startIconTint="@color/white">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etUserName"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/botron_edittext"
            android:ems="10"
            android:inputType="textPersonName"
            android:paddingLeft="30dp"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="#FFFFFF"
            app:backgroundTint="#FB9E58"

            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_input_pass"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:hint="Password"
        android:textColorHint="@color/white"
        app:hintAnimationEnabled="false"
        app:hintTextAppearance="@style/TextInputLayoutHintText"
        app:startIconDrawable="@drawable/icon_pass"
        app:startIconTint="@color/white">


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/botron_edittext"
            android:ems="10"
            android:inputType="textPassword"
            android:paddingLeft="30dp"
            android:textColor="@color/white"
            android:textColorHint="#FFFFFF"
            app:backgroundTint="#FB9E58" />
    </com.google.android.material.textfield.TextInputLayout>

    <CheckBox
        android:id="@+id/cb_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="50dp"
        android:buttonTint="#000000"
        android:text="REMEMBER ME !"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tvError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:textColor="#D50000" />


    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/radius_button"
        android:backgroundTint="@drawable/state_button"
        android:gravity="center|center_horizontal"
        android:onClick="btnLogin_onclick"
        android:text="LOGIN"
        android:textColor="#fff"
        android:textSize="40px" />


    <TextView
        android:id="@+id/forgotpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="Forgot Password?"
        android:textColor="#FF6D00"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:text="Don't have an acccount?"
        android:textColor="@color/black"
        android:textSize="40px" />


    <Button
        android:id="@+id/btnRegister"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/radius_button"
        android:backgroundTint="#00BFA5"
        android:gravity="center|center_horizontal"
        android:text="SIGN UP"
        android:textColor="#fff"
        android:textSize="40px" />


</LinearLayout>